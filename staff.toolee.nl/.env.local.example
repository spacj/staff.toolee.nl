# ═══════════════════════════════════════════
# Firebase (required)
# ═══════════════════════════════════════════
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# ═══════════════════════════════════════════
# PayPal (required for billing)
# Get from: https://developer.paypal.com → Apps & Credentials
# ═══════════════════════════════════════════
NEXT_PUBLIC_PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
NEXT_PUBLIC_PAYPAL_MODE=sandbox

# ═══════════════════════════════════════════
# PayPal Plan IDs (generated by setup script)
# Run ONCE: node scripts/setup-paypal.mjs
# ═══════════════════════════════════════════
NEXT_PUBLIC_PAYPAL_PLAN_STANDARD_MONTHLY=
NEXT_PUBLIC_PAYPAL_PLAN_STANDARD_YEARLY=
NEXT_PUBLIC_PAYPAL_PLAN_ENTERPRISE_MONTHLY=
NEXT_PUBLIC_PAYPAL_PLAN_ENTERPRISE_YEARLY=

# ═══════════════════════════════════════════
# PayPal Webhook ID (optional, recommended for production)
# ═══════════════════════════════════════════
PAYPAL_WEBHOOK_ID=

# ═══════════════════════════════════════════
# AI Features (optional — enables AI Assistant)
# Get from: https://build.nvidia.com
# ═══════════════════════════════════════════
NVIDIA_API_KEY=
